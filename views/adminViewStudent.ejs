<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View Student</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    table, th, td {
      border: 1px solid black;
    }
    th, td {
      padding: 10px;
      text-align: left;
    }
    .action-buttons {
      display: flex;
      gap: 10px;
    }
  </style>
</head>
<body>
  <h1>View Student</h1>

  <table>
    <tr>
      <th>Field</th>
      <th>Value</th>
    </tr>
    <tr>
      <td>Full Name</td>
      <td><%= student.fullName %></td>
    </tr>
    <tr>
      <td>Email</td>
      <td><%= student.email %></td>
    </tr>
    <tr>
      <td>Room Number</td>
      <td><%= student.roomNumber %></td>
    </tr>
    <tr>
      <td>Branch</td>
      <td><%= student.branch %></td>
    </tr>
    <tr>
      <td>Batch</td>
      <td><%= student.batch %></td>
    </tr>
    <tr>
      <td>Gender</td>
      <td><%= student.gender %></td>
    </tr>
    <tr>
      <td>Mobile Number</td>
      <td><%= student.mobileNumber %></td>
    </tr>
    <tr>
      <td>Enrollment Number</td>
      <td><%= student.enrollmentNumber %></td>
    </tr>
  </table>

  <h2>Monthly Fees</h2>

  <table>
    <thead>
      <tr>
        <th>Month</th>
        <th>Fee Amount</th>
        <th>Pending</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% let totalFees = 0; %>
      <% monthlyFees.forEach(fee => { %>
        <% const feeKey = `${fee.month} ${fee.year}`; %>
        <% if (student.pendingFees.has(feeKey)) { %>
          <% const isPending = student.pendingFees.get(feeKey); %>
          <% const paymentDate = student.paymentDateTime.get(feeKey); %>
          <tr>
            <td><%= feeKey %></td>
            <td><%= fee.feeAmount %></td>
            <td><%= isPending ? "Yes" : "No" %></td>
            <td class="action-buttons">
              <% if (isPending) { %>
                <form
                  id="markAsPaidForm"
                  action="/admin/mark-fee-as-paid/<%= student._id %>/<%= feeKey %>"
                  method="post"
                >
                  <button type="button" onclick="confirmMarkAsPaid()">Mark as Paid</button>
                </form>
              <% } else { %>
                <% if (!paymentDate) { %>
                  <button disabled>Not Applicable</button>
                <% } %>
                <% if (paymentDate) { %>
                  <button disabled>Fees Paid</button>
                  <a href="/admin/download-receipt/<%= student._id %>/<%= fee.month %>/<%= fee.year %>">
                    <button type="button">Download Receipt</button>
                  </a>
                <% } %>
              <% } %>
            </td>
          </tr>
          <% if (isPending) { %>
            <% totalFees += fee.feeAmount; %>
          <% } %>
        <% } %>
      <% }); %>
      <tr>
        <th>Total Pending Fees</th>
        <td colspan="3"><%= totalFees %></td>
      </tr>
    </tbody>
  </table>

  <a href="/admin/dashboard">
    <button>Back to Admin Page</button>
  </a>

  <script>
    function confirmMarkAsPaid() {
      if (confirm("Are you sure you want to mark this fee as paid?")) {
        document.getElementById("markAsPaidForm").submit();
      }
    }
  </script>
</body>
</html>
